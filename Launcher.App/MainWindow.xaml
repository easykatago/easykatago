<Window x:Class="Launcher.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="KataGo + LizzieYzy 启动器"
        Icon="Assets/app.ico"
        Height="760"
        Width="1280"
        MinHeight="680"
        MinWidth="1100">
    <Grid Background="{StaticResource Brush.WindowGradient}">
        <Canvas IsHitTestVisible="False" ClipToBounds="True">
            <Ellipse Width="420" Height="420" Fill="{StaticResource Brush.HaloTop}" Canvas.Right="-120" Canvas.Top="-190" />
            <Ellipse Width="360" Height="360" Fill="{StaticResource Brush.HaloBottom}" Canvas.Left="-120" Canvas.Bottom="-200" />
        </Canvas>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource Brush.TopBarGradient}"
                    BorderBrush="{StaticResource Brush.Border}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="34" Height="34" CornerRadius="10" Background="{StaticResource Brush.Accent}" Margin="0,0,12,0">
                            <TextBlock Text="围" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel>
                            <TextBlock Text="EasyKataGo Launcher" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="KataGo + LizzieYzy 一键管理" FontSize="12" Foreground="{StaticResource Brush.TextSecondary}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="292" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="14">
                            <TextBlock Text="导航" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Brush.TextSecondary}" Margin="2,4,0,10" />
                            <Button x:Name="NavHomeButton" Tag="Home" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="首页" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavInstallButton" Tag="Install" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7AD;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="安装向导" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavNetworksButton" Tag="Networks" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE896;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="权重管理" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavProfilesButton" Tag="Profiles" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8D2;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="配置档案" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavLogsButton" Tag="Logs" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7C3;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="日志" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavDiagnosticsButton" Tag="Diagnostics" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9D9;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="诊断" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavSettingsButton" Tag="Settings" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="设置" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="NavAboutButton" Tag="About" Style="{StaticResource SideNavButtonStyle}" Click="NavigationButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE946;" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="关于" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Grid Grid.Column="1" Margin="16">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>



